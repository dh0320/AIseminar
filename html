};

let evolutionChart = null;

const renderNav = () => {
    const navContainer = document.querySelector('#evolution-path .flex');
    let navHtml = '';
    const stages = ['dialogue', 'knowledge', 'reasoning', 'action', 'collaboration', 'creation', 'governance'];
    
    stages.forEach(key => {
        const item = aiEvolutionData[key];
        navHtml += `
            <div class="flex flex-col items-center">
                <div id="nav-${key}" data-key="${key}" class="nav-item bg-white w-24 h-24 md:w-28 md:h-28 rounded-full shadow-md flex flex-col justify-center items-center p-2 text-center border-2 border-gray-200 hover:shadow-xl hover:border-gray-400">
                    <span class="text-2xl md:text-3xl">${item.icon}</span>
                    <span class="text-xs md:text-sm font-semibold">${item.title}</span>
                </div>
            </div>
        `;
    });
    navContainer.innerHTML = navHtml;
};

const renderContent = (key) => {
    const contentDisplay = document.getElementById('content-display');
    const contentData = aiEvolutionData[key];
    contentDisplay.innerHTML = contentData.content;
    
    // Activate nav item
    document.querySelectorAll('.nav-item').forEach(item => {
        item.classList.toggle('active', item.dataset.key === key);
    });

    // Special rendering for introduction chart
    if (key === 'introduction') {
        renderEvolutionChart();
    }
};

const renderEvolutionChart = () => {
    const ctx = document.getElementById('evolutionChart')?.getContext('2d');
    if (!ctx) return;

    const labels = ['対話', '知識拡張', '思考', '自律実行', '協調', '創造', '責任'];
    const aiAutonomyData = [10, 25, 45, 70, 85, 95, 100];
    const humanRoleAbstractionData = [15, 30, 50, 75, 90, 100, 100];

    if(evolutionChart) {
        evolutionChart.destroy();
    }

    evolutionChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: labels,
            datasets: [
                {
                    label: 'AIの自律性',
                    data: aiAutonomyData,
                    borderColor: '#6366F1',
                    backgroundColor: 'rgba(99, 102, 241, 0.1)',
                    yAxisID: 'y',
                    fill: true,
                    tension: 0.3,
                },
                {
                    label: '人間の役割の抽象度',
                    data: humanRoleAbstractionData,
                    borderColor: '#F59E0B',
                    backgroundColor: 'rgba(245, 158, 11, 0.1)',
                    yAxisID: 'y',
                    fill: true,
                    tension: 0.3,
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
                mode: 'index',
                intersect: false,
            },
            scales: {
                y: {
                    type: 'linear',
                    display: true,
                    position: 'left',
                    min: 0,
                    max: 110,
                    title: {
                        display: true,
                        text: '能力・抽象度のレベル'
                    }
                }
            },
            plugins: {
                tooltip: {
                    callbacks: {
                        title: function(context) {
                            return '進化段階: ' + context[0].label;
                        }
                    }
                },
                legend: {
                    position: 'bottom'
                }
            },
            onClick: (event, elements) => {
                if (elements.length > 0) {
                    const index = elements[0].index;
                    const stageKeys = ['dialogue', 'knowledge', 'reasoning', 'action', 'collaboration', 'creation', 'governance'];
                    renderContent(stageKeys[index]);
                }
            }
        }
    });
};


document.addEventListener('DOMContentLoaded', () => {
    renderNav();
    renderContent('introduction');

    document.querySelector('#evolution-path').addEventListener('click', (e) => {
        const navItem = e.target.closest('.nav-item');
        if (navItem) {
            const key = navItem.dataset.key;
            renderContent(key);
        }
    });
});
</script>
</body>
</html>
